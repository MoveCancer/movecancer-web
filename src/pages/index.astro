---
// 1. (SOLUCIÓN PRINCIPAL) Esta línea carga todos los estilos de Tailwind.
import '../styles/globals.css';
---
<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Move Cancer - Entrenamiento Oncológico</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&display=swap" rel="stylesheet">
    
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>⚡</text></svg>">

    <style is:global>
        /* Estilo base con la fuente Inter */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #0A0A0A; /* Un negro ligeramente más suave */
            color: #E0E0E0; /* Un blanco roto para mejor lectura */
        }

        /* Degradado para el Hero Section */
        .hero-gradient {
            background: radial-gradient(ellipse at 50% -20%, rgba(19, 78, 245, 0.3), rgba(10, 10, 10, 0) 40%);
        }

        /* Estilo para los títulos principales */
        .title-highlight {
            background: -webkit-linear-gradient(45deg, #3B82F6, #A855F7);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Animaciones sutiles */
        @keyframes fade-in-up {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .animate-fade-in-up {
            animation: fade-in-up 0.8s ease-out forwards;
        }
        
        /* Estilo para el acordeón de FAQ */
        details > summary {
            list-style: none;
        }
        details > summary::-webkit-details-marker {
            display: none;
        }
        details[open] summary .arrow-down {
            transform: rotate(180deg);
        }
    </style>
    <!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-REH2WR3KB5"></script>
<script>
